<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/divider"
    android:layout_height="wrap_content">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginBottom="5dp"
       app:cardCornerRadius="10dp"
       app:contentPadding="10dp"
       app:cardElevation="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="@dimen/margin_btn"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size"
                   android:text="Restaurant A"
                   android:textColor="@android:color/black"
                   android:id="@+id/txt_restaurant_name"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="8dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:src="@drawable/ic_location_on24dp"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_sub_size"
                       android:text="257 Carianna Cove Trl World"
                       android:textColor="@android:color/black"
                       android:id="@+id/txt_restaurant_address"/>
               </LinearLayout>
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:id="@+id/img_restaurant"
               android:src="@drawable/app_icon"
               android:scaleType="centerCrop"
               android:layout_height="150dp" />
       </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>