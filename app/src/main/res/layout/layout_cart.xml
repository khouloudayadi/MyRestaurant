<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/img_food"
            android:src="@drawable/app_icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textColor="@color/button_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="18"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="$180"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="14sp"
                    android:id="@+id/txt_food_price"
                    android:textStyle="italic"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear_24dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/img_decrease"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_24dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:background="@drawable/qte_background_textview"
                    android:textSize="14sp"
                    android:id="@+id/txt_qte_food"
                    android:textStyle="italic"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/img_increase"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_drag_handle_24dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="180"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/txt_new_price"
                    android:textStyle="italic"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_delete_food"
            android:src="@drawable/ic_close_24dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>